<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideOverlay"
    android:id="@+id/activity_main">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.m_to.toppgen.MainActivity">

    <TextView
        android:text="@string/label_volume_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVolLock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:saveEnabled="false" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textPulseWidth"
        android:layout_toRightOf="@+id/textPulseWidth"
        android:layout_toEndOf="@+id/textPulseWidth"
        android:id="@+id/seekImpulseLength"
        android:progress="0"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/value_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewImpulseLength"
        android:layout_alignBottom="@+id/seekImpulseLength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/label_impulse_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewImpulseLength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/control_vertical_margin"
        android:id="@+id/textImpulseDelay"
        android:saveEnabled="false" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textImpulseDelay"
        android:layout_alignLeft="@+id/seekImpulseLength"
        android:layout_alignStart="@+id/seekImpulseLength"
        android:id="@+id/seekImpulseDelay"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/value_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewDutyCycle"
        android:layout_alignBottom="@+id/seekDutyCycle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekDutyCycle"
        android:max="100"
        android:progress="20"
        android:layout_alignTop="@+id/textDuty"
        android:layout_toRightOf="@+id/textPulseWidth"
        android:layout_toEndOf="@+id/textPulseWidth"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/label_impulse_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/control_vertical_margin"
        android:id="@+id/textPulseWidth"
        android:layout_below="@+id/viewDutyCycle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />


    <TextView
        android:text="@string/value_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewImpulseDelay"
        android:layout_alignBottom="@+id/seekImpulseDelay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/label_slope_rise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewImpulseDelay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/control_vertical_margin"
        android:id="@+id/textSlopeRise"
        android:saveEnabled="false" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textSlopeRise"
        android:layout_alignLeft="@+id/seekImpulseDelay"
        android:layout_alignStart="@+id/seekImpulseDelay"
        android:id="@+id/seekSlopeRise"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/value_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewSlopeRise"
        android:layout_alignBottom="@+id/seekSlopeRise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/label_slope_fall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSlopeRise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/control_vertical_margin"
        android:id="@+id/textSlopeFall"
        android:saveEnabled="false" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textSlopeFall"
        android:layout_alignLeft="@+id/seekImpulseDelay"
        android:layout_alignStart="@+id/seekImpulseDelay"
        android:id="@+id/seekSlopeFall"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/value_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewSlopeFall"
        android:layout_alignBottom="@+id/seekSlopeFall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />

    <ToggleButton
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleStayAwake"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/textAwake"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:saveEnabled="false" />

    <ToggleButton
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleVolLock"
        android:layout_below="@+id/textVolLock"
        android:layout_centerHorizontal="true"
        android:saveEnabled="false" />

    <ToggleButton
        android:text="@string/xxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleMaster"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/textMaster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/label_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMaster"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/toggleMaster"
        android:layout_alignStart="@+id/toggleMaster"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/label_stay_awake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAwake"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/toggleStayAwake"
        android:layout_alignStart="@+id/toggleStayAwake"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/label_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDuty"
        android:layout_marginTop="@dimen/control_vertical_margin"
        android:layout_below="@+id/viewSupplyVoltage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />

    <TextView
        android:text="@string/label_supply_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSupplyVoltage"
        android:layout_marginTop="@dimen/control_vertical_margin"
        android:layout_below="@+id/toggleMaster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:saveEnabled="false" />

    <ImageButton
        android:src="@android:drawable/ic_menu_preferences"
        android:contentDescription="@string/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVoltages"
        android:layout_alignTop="@+id/textMotorVoltage"
        android:layout_alignStart="@+id/toggleStayAwake" />

    <TextView
        android:text="@string/label_motor_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMotorVoltage"
        android:layout_marginLeft="10dp"
        android:saveEnabled="false"
        android:layout_alignBaseline="@+id/textSupplyVoltage"
        android:layout_alignBottom="@+id/textSupplyVoltage"
        android:layout_alignStart="@+id/textVolLock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSupplyVoltage"
        android:layout_alignParentStart="true"
        android:id="@+id/viewSupplyVoltage"
        android:text="@string/value_volt" />

    <TextView
        android:text="@string/value_volt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMotorVoltage"
        android:layout_alignStart="@+id/textMotorVoltage"
        android:id="@+id/viewMotorVoltage" />

</RelativeLayout>
</ScrollView>